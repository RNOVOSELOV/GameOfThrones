<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/rv_items_heigth">

    <ImageView
        android:id="@+id/iv_person_avatar"
        android:layout_width="@dimen/size_rv_avatar"
        android:layout_height="@dimen/size_rv_avatar"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_small_16"
        android:src="@drawable/lanister_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_great_72"
        android:layout_marginRight="@dimen/margin_increased_32"
        android:orientation="vertical">

        <TextView
            android:id="@+id/iv_person_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:textSize="@dimen/font_increased_16"
            tools:text="Roman Novoselov" />

        <TextView
            android:id="@+id/iv_person_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-regular"
            android:maxLines="1"
            android:textSize="@dimen/font_normal_14"
            tools:text="Инженер-программист" />

    </LinearLayout>

</android.support.v7.widget.CardView>