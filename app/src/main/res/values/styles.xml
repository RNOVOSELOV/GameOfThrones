<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="AppTheme.Button.Accent" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/color_accent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="custom_dialog">
        <item name="android:fullDark">@android:color/transparent</item>
    </style>

    <style name="person_icons">
        <item name="android:layout_width">@dimen/size_small_24</item>
        <item name="android:layout_height">@dimen/size_small_24</item>
        <item name="android:layout_marginTop">@dimen/margin_normal_24</item>
        <item name="android:layout_marginLeft">@dimen/margin_normal_24</item>
    </style>

    <style name="person_layout_item_overal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_little_8</item>
        <item name="android:layout_marginTop">@dimen/margin_little_8</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="person_layout_item">
        <item name="android:layout_marginLeft">@dimen/margin_increased_32</item>
        <item name="android:layout_marginRight">@dimen/margin_72</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">bottom</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="person_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_little</item>
        <item name="android:background">@color/grey</item>
        <item name="android:layout_marginLeft">@dimen/margin_72</item>
    </style>

    <style name="person_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:enabled">false</item>
        <item name="android:focusable">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-regular</item>
        <item name="android:textColor">@color/grey_dark</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="hint_edit_text_style" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

</resources>
